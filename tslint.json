{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [
      true,
      "never"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "jsx-boolean-value": false,
    "jsx-no-lambda": false,
    "max-line-length": [
      true,
      120
    ]
  }
}
