{
  "name": "tiles",
  "version": "1.0.0",
  "main": "index.js",
  "author": "PaweÅ‚ J. Wal",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-syntax-async-generators": "^7.2.0",
    "@types/pixi.js": "^4.8.7",
    "babel-preset-env": "^1.7.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "sass": "^1.21.0",
    "typescript": "^3.5.1"
  },
  "scripts": {
    "start": "npm-run-all prepare server",
    "build": "npm-run-all prepare parcel-build",
    "prebuild:dir": "mkdir -p dist",
    "prebuild:atlas": "ruby build/tiles.rb -x 2048 -y 1536 -s 32 -t 'tileset.png' > dist/tileset.json",
    "prebuild:character_atlas": "ruby build/tiles.rb -x 512 -y 1440 -s 32 -t 'character32.png' --prefix='c' > dist/character32.json",
    "prebuild:copy": "cp src/assets/*.png dist/",
    "prepare": "npm-run-all prebuild:*",
    "server": "parcel index.html",
    "parcel-build": "parcel build index.html",
    "clean": "rm -f dist/*.*"
  },
  "dependencies": {
    "pixi-viewport": "^4.0.0-beta.0",
    "pixi.js": "4.8.7"
  }
}
